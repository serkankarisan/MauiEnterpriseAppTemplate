<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    x:Class="MauiEnterpriseApp.Views.Main.ItemListPage"
    x:Name="PageRoot"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:resx="clr-namespace:MauiEnterpriseApp.Resources.Localization"
    xmlns:shapes="clr-namespace:Microsoft.Maui.Controls.Shapes;assembly=Microsoft.Maui.Controls"
    Title="{Binding Title}">

    <ContentPage.Content>
        <Grid RowDefinitions="Auto,*">
            <Grid
                Grid.Row="0"
                ColumnDefinitions="*,Auto"
                Margin="24,16,24,8">
                <Label
                    Grid.Column="0"
                    Text="{x:Static resx:AppResources.ItemList_Header_Title}"
                    Style="{StaticResource Headline}" />

                <Button
                    Grid.Column="1"
                    Text="+"
                    Command="{Binding NewItemCommand}"
                    WidthRequest="40"
                    HeightRequest="40" />
            </Grid>

            <!-- Liste -->
            <RefreshView
                Grid.Row="1"
                IsRefreshing="{Binding IsRefreshing}"
                Command="{Binding RefreshCommand}">

                <CollectionView
                    x:Name="ItemsCollectionView"
                    ItemsSource="{Binding Items}"
                    SelectionMode="None">

                    <CollectionView.EmptyView>
                        <Label
                            Text="{Binding StatusMessage}"
                            TextColor="{StaticResource Gray500}"
                            HorizontalOptions="Center"
                            VerticalOptions="Center" />
                    </CollectionView.EmptyView>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid
                                Padding="16"
                                Margin="16,8"
                                RowDefinitions="Auto,Auto"
                                ColumnDefinitions="*,Auto">

                                <!-- TEK TIK: Detay -->
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer
                                        Command="{Binding BindingContext.ItemTappedCommand, Source={x:Reference ItemsCollectionView}}"
                                        CommandParameter="{Binding .}" />
                                </Grid.GestureRecognizers>

                                <!-- ÜST SATIR: Başlık + Durum + Context butonu -->
                                <Grid
                                    Grid.Row="0"
                                    ColumnDefinitions="*,Auto,Auto"
                                    ColumnSpacing="8">

                                    <!-- Başlık -->
                                    <Label
                                        Grid.Column="0"
                                        Text="{Binding Title}"
                                        FontAttributes="Bold"
                                        FontSize="16"
                                        LineBreakMode="TailTruncation"
                                        MaxLines="1" />

                                    <!-- Durum chip'i -->
                                    <!-- Context menü ikonu (daha minimal) -->
                                    <Border
                                        Grid.Column="2"
                                        WidthRequest="28"
                                        HeightRequest="28"
                                        StrokeThickness="0"
                                        BackgroundColor="Transparent"
                                        HorizontalOptions="End"
                                        VerticalOptions="Center"
                                        Margin="4,0,0,0">

                                        <Border.StrokeShape>
                                            <shapes:RoundRectangle CornerRadius="14" />
                                        </Border.StrokeShape>

                                        <!-- Tıklama: context menü aç -->
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer
                                                Command="{Binding BindingContext.ShowContextMenuCommand, Source={x:Reference ItemsCollectionView}}"
                                                CommandParameter="{Binding .}" />
                                        </Border.GestureRecognizers>

                                        <Label
                                            Text="⋮"
                                            HorizontalOptions="Center"
                                            VerticalOptions="Center"
                                            FontSize="18"
                                            TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource Gray300}}" />
                                    </Border>

                                </Grid>

                                <!-- ALT SATIR: Açıklama + Tarih -->
                                <StackLayout
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Spacing="4"
                                    Margin="0,4,0,0">

                                    <Label
                                        Text="{Binding Description}"
                                        FontSize="13"
                                        TextColor="{StaticResource Gray700}"
                                        LineBreakMode="TailTruncation"
                                        MaxLines="2" />

                                    <Label
                                        Text="{Binding LastUpdatedAt, StringFormat='Son güncelleme: {0:dd.MM.yyyy HH:mm}'}"
                                        FontSize="11"
                                        TextColor="{StaticResource Gray500}" />
                                </StackLayout>

                                <!-- Kart görünümü -->
                                <Grid.Background>
                                    <SolidColorBrush
                                        Color="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}" />
                                </Grid.Background>

                                <Grid.Shadow>
                                    <Shadow
                                        Radius="10"
                                        Opacity="0.25"
                                        Offset="0,3" />
                                </Grid.Shadow>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
        </Grid>
    </ContentPage.Content>
</ContentPage>